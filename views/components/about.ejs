<section id="about" class="about section-bg-dark">
    <div class="container">
      <div class="section-title">
        <h2>About</h2>
      </div>
      <div class="row">
        <div class="col-lg-4" data-aos="fade-right">
          <img src="assets/img/ava/hero.jpg" class="img-fluid" alt="">
        </div>
        <div class="col-lg-8 pt-4 pt-lg-0 content" data-aos="fade-left">
          <h3><%= about.title %> </h3>
          <div class="row">
            <div class="col-lg-12 mb-3">
              <p>
                <%= about.desc %> 
              </p>  
            </div>
            <% about.biodata.forEach(biodata => { %>
              <div class="col-lg-6">
                <ul>
                  <% biodata.forEach(bio => { %>
                    <li>
                      <i class="bi bi-chevron-right"></i>
                      <strong><%= bio.key %> </strong>
                      <span><%= bio.value %> </span>
                    </li>
                  <% }) %>
                </ul>
              </div>
            <% }) %>
          </div>
        </div>
      </div>
    </div>
  </section><!-- End About Section -->
